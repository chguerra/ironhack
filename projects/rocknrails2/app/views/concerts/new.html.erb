<div id="form">
		<%= form_for [@concert] do |f| %>
		<%= f.label :band%>
		<%= f.text_field :band%>
		<br>
		<%= f.label :venue%>
		<%= f.text_field :venue%>
		<br>
		<%= f.label :city%>
		<%= select_tag(:name, options_from_collection_for_select(@cities, :id, :name)) %>
		<br>
    <%= f.label :date%>
		<%= f.date_field :date%>
		<br>
    <%= f.label :price%>
		<%= f.text_field :price%>
		<br>
    <%= f.label :description%>
		<%= f.text_field :description%>
		<br>
		<%= f.submit 'Save' %>
		<% end %>
	</div>
