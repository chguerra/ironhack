<h1>BBQ</h1>

<div data-hook="bbq-info" data-bbq="<%= params[:id] %>"></div>

<button type="btn btn-success" class="js-show-items" name="button">Show/Hide Item List</button>

<div class ="itemlist">
  <input type="text" class="js-item-input" placeholder="Type item here...">
  <button type="btn-warning" class="js-submit-button" data-bbqId="<%= params[:id]%>">Add item</button>
</div><br>

<a href="<%= barbecues_path %>">Back to list of BBQs</a>
